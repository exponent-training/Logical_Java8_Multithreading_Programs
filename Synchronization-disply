package com.Exponent.Day3;

public class display {
//thread -> show()
	public static synchronized void show(String name) {

		for (int i = 1; i <= 10; i++) {
			System.out.print("How are you :- ");

			try {
				Thread.sleep(1000);
			} catch (Exception e) {
			}

			System.out.println(name);
		}

	}
}
